<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4A0A0">

    <TextView
        android:id="@+id/diaryTextView"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:text="Diary Content..."
        android:background="@drawable/rectangular1"
        android:textSize="20sp"
        android:fontFamily="@font/font_custom"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_close_24"
        app:layout_constraintTop_toTopOf="@id/diaryTextView"
        app:layout_constraintEnd_toEndOf="@id/diaryTextView"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/rabbit1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/happyrabbit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>