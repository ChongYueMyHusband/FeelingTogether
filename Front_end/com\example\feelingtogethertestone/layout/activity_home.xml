<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0E3E4">

    <!-- Profile Photo Button -->
    <Button
        android:id="@+id/ProfilePhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/user_avatar_circle"
        app:layout_constraintBottom_toTopOf="@+id/EmotionDiary"
        app:layout_constraintEnd_toStartOf="@+id/UserInfo"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.25" />

    <!-- User Info TextView -->
    <TextView
        android:id="@+id/UserInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/home_circle_text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Personal Infomation"
        app:layout_constraintBottom_toTopOf="@+id/EmotionDiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ProfilePhoto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.70" />

    <!-- Emotion Diary Button -->

    <!-- Calendar Button -->

    <Button
        android:id="@+id/EmotionDiary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@drawable/home_diary_6"
        app:layout_constraintBottom_toTopOf="@+id/Player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePhoto"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.85" />

    <Button
        android:id="@+id/Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_calendar_1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/EmotionForum"
        app:layout_constraintHeight_percent="0.2016"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.384" />
    <!--    app:layout_constraintDimensionRatio="1:1"-->
    <!-- Emotion Forum Button -->
    <Button
        android:id="@+id/EmotionForum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_forum_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHeight_percent="0.2016"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Calendar"
        app:layout_constraintTop_toBottomOf="@+id/ChattingRobot"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.384" />

    <!-- Player Button -->

    <!-- Chatting Robot Button -->

    <Button
        android:id="@+id/Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/home_player_4"
        app:layout_constraintBottom_toTopOf="@+id/Calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ChattingRobot"

        app:layout_constraintHeight_percent="0.2016"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmotionDiary"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.384" />

    <Button
        android:id="@+id/ChattingRobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/home_robot_6"
        app:layout_constraintBottom_toTopOf="@+id/EmotionForum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2016"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Player"
        app:layout_constraintTop_toBottomOf="@+id/EmotionDiary"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.384" />

</androidx.constraintlayout.widget.ConstraintLayout>
